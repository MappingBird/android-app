<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:windowTitleSize">@dimen/title_bar_height</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowAnimationStyle">@style/activity_animation</item>
    </style>

    <style name="LoadingDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="SelectPlaceKindDialog" parent="@android:Theme.Translucent">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <!-- Animation -->
    <style name="activity_animation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_open_enter_animation</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_open_exit_animation</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_close_exit_animation</item>
    </style>

    <!-- Text style -->
    <style name="TextStyle_Title_Small">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextStyle_Subtitle">
        <item name="android:textSize">19sp</item>
    </style>

    <style name="TextStyle_Body">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyle_Body_Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextStyle_Caption">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle_Comment">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextStyle_Label">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle_Hero">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="TextStyle_Quote">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="TextStyle_Attribute">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextStyle_Regular">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextStyle_Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TitleButtonStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/titlebar_button_text_color</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@drawable/titlebar_button_bg</item>
        <item name="android:gravity">center</item>
    </style>

</resources>