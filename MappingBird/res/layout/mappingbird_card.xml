<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/place_item_card_height"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/cards_background" >

        <ImageView
            android:id="@+id/card_icon"
            android:layout_width="@dimen/place_item_card_icon_width"
            android:layout_height="@dimen/place_item_card_icon_height"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/card_distance"
            android:layout_width="@dimen/place_item_card_distance_width"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="#000"
            android:singleLine="true"
            android:textSize="16sp"
            />
        <View
            android:id="@+id/card_divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#b8b8b8"
            android:layout_toLeftOf="@id/card_distance"
            />
        <TextView
            android:id="@+id/card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/card_icon"
            android:layout_toLeftOf="@id/card_divider"
            android:paddingLeft="4dp"
            android:singleLine="true"
            android:layout_centerHorizontal="true"
            android:ellipsize="none"
            android:text="@string/loadig_main"
            android:textSize="18sp"
            android:textColor="#4e4e4e" />

    </RelativeLayout>

</RelativeLayout>