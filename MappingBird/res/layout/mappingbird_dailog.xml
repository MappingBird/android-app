<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A0000000">

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <com.pnikosis.materialishprogress.ProgressWheel
        xmlns:wheel="http://schemas.android.com/apk/res-auto"
        android:id="@+id/image"
        android:layout_width="94dp"
        android:layout_height="102dp"
        android:layout_centerHorizontal="true"
        android:padding="26dp"
        android:background="@drawable/btn_submit_white_normal"
        android:layout_marginTop="@dimen/dialog_loading_margin_top"
        wheel:barColor="@color/loader_blue_fillin"
        wheel:barWidth="5dp"
        wheel:progressIndeterminate="true"
        wheel:rimColor="@color/loader_blue_bg"
        wheel:rimWidth="5dp"/>

    <LinearLayout
        android:id="@+id/arena_msg_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:visibility="gone" >

        <Button
            android:id="@+id/arena_msg_cancel"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            
             />

        <Button
            android:id="@+id/arena_msg_confirm"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
             />
    </LinearLayout>

</RelativeLayout>