<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent" >

    <!-- welcome -->

    <RelativeLayout
        android:id="@+id/tutoral_welcome"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <com.mappingbird.widget.MappingbirdFontIcon
            android:id="@+id/logo_icon"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="@string/iconfont_mappingbird_logo"
            android:textColor="@color/font_white"
            android:textSize="78dp" />

        <ImageView
            android:id="@+id/logo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo_icon"
            android:layout_centerInParent="true"
            android:src="@drawable/mappingbird_logotype_large" />

        <com.mappingbird.widget.MappingbirdTextView
            style="@style/TextStyle_Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo_text"
            android:layout_centerHorizontal="true"
            android:text="@string/tutorial_welcome"
            android:textColor="@color/font_white"
            android:textSize="24dp" />

        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tutoral_sign_in"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <com.mappingbird.widget.MappingbirdTextView
                style="@style/TextStyle_Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tutorial_swipe_to_learn"
                android:textColor="@color/font_white"
                android:textSize="14dp" />

            <com.mappingbird.widget.MappingbirdTextView
                style="@style/TextStyle_Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tutorial_already_have_account"
                android:textColor="@color/font_white"
                android:textSize="14dp" />
        </LinearLayout>

        <com.mappingbird.widget.MappingbirdTextView
            android:id="@+id/tutoral_sign_in"
            style="@style/BtnTransparent"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:maxWidth="272dp"
            android:text="@string/tutorial_sign_in" />
    </RelativeLayout>

    <!-- Intro Page -->

    <LinearLayout
        android:id="@+id/tutoral_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/page_intro_image"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_launcher" />

        <com.mappingbird.widget.MappingbirdTextView
            android:id="@+id/page_intro_title"
            style="@style/TextStyle_Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:text="@string/tutorial_page1_scenario_intro"
            android:textColor="@color/font_white"
            android:textSize="16dp" />

        <com.mappingbird.widget.MappingbirdTextView
            android:id="@+id/page_intro_title2"
            style="@style/TextStyle_Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_horizontal"
            android:text="@string/tutorial_page1_scenario_intro"
            android:textColor="@color/font_white"
            android:textSize="16dp" />
    </LinearLayout>

    <!-- Create account or do it later -->

    <LinearLayout
        android:id="@+id/tutoral_create_or_do_later"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/tutoral_create_image"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_launcher" />

        <com.mappingbird.widget.MappingbirdTextView
            style="@style/TextStyle_Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:text="@string/tutorial_sign_up_title"
            android:textColor="@color/font_white"
            android:textSize="16dp" />

        <com.mappingbird.widget.MappingbirdTextView
            android:id="@+id/tutoral_create_descripion"
            style="@style/TextStyle_Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="@string/tutorial_sign_up_descriptions"
            android:textColor="@color/font_white"
            android:textSize="16dp" />

        <com.mappingbird.widget.MappingbirdTextView
            android:id="@+id/tutoral_create_account"
            style="@style/TextStyle_Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/login_selector"
            android:padding="10dp"
            android:text="@string/tutorial_create_account"
            android:textColor="@color/font_white"
            android:textSize="24dp" />

        <com.mappingbird.widget.MappingbirdTextView
            android:id="@+id/tutoral_do_it_later"
            style="@style/TextStyle_Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/login_selector"
            android:padding="10dp"
            android:text="@string/tutorial_do_it_later"
            android:textColor="@color/font_white"
            android:textSize="24dp" />
    </LinearLayout>

</FrameLayout>