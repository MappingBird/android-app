<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent" >

    <com.mappingbird.widget.MappingbirdFontIcon
        android:id="@+id/title_btn_people"
        style="@style/TitleButtonStyle"
        android:layout_alignParentRight="true"
        android:text="@string/icon_people" />

    <com.mappingbird.widget.MappingbirdFontIcon
        android:id="@+id/title_btn_add"
        style="@style/TitleButtonStyle"
        android:layout_toLeftOf="@id/title_btn_people"
        android:text="@string/icon_add_place" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/title_btn_add"
        android:orientation="horizontal" >

        <com.mappingbird.widget.MappingbirdTextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/font_white"
            android:textSize="@dimen/header_title_text_size" />

        <com.mappingbird.widget.MappingbirdTextView
            android:id="@+id/title_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:singleLine="true"
            android:textColor="@color/font_white"
            android:textSize="@dimen/header_title_number_size" />
    </LinearLayout>

</RelativeLayout>