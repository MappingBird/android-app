<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent" >

    <com.mappingbird.widget.MappingbirdButton
        android:id="@+id/title_btn_people"
        style="@style/TitleButtonStyle"
        android:layout_alignParentRight="true"
        android:text="@string/icon_people" />

    <com.mappingbird.widget.MappingbirdButton
        android:id="@+id/title_btn_add"
        style="@style/TitleButtonStyle"
        android:layout_toLeftOf="@id/title_btn_people"
        android:text="@string/icon_add_place" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/title_btn_add"
        android:singleLine="true"
        android:textSize="@dimen/header_title_text_size"
        android:textColor="@color/font_white" />

    <TextView
        android:id="@+id/title_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/title_text"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/title_btn_add"
        android:singleLine="true"
        android:textSize="@dimen/header_title_number_size"
        android:textColor="@color/font_white" />

</RelativeLayout>