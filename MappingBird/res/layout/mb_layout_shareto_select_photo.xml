<?xml version="1.0" encoding="utf-8"?>
<com.mpbd.shareto.widgets.ShareToSelectPhotoLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="8dp">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/shareto_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/bg_grey"
        android:padding="4dp"
        android:clipToPadding="false"
        android:scrollbars="none" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/default_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal" >

        <com.mpbd.widget.MappingbirdTextView
            android:id="@+id/shareto_dg_photo_negative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_dialog_bg"
            android:gravity="center"
            android:textColor="@color/font_normal"
            android:textAllCaps="true"
            android:text="@string/str_cancel"
            android:textSize="16dp" />

        <View
            android:id="@+id/dialog_divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@color/default_divider" />

        <com.mpbd.widget.MappingbirdTextView
            android:id="@+id/shareto_dg_photo_positive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_dialog_bg"
            android:gravity="center"
            android:textAllCaps="true"
            android:text="@string/ok"
            android:textColor="@color/btn_text_blue_color"
            android:textSize="16dp" />
    </LinearLayout>
</com.mpbd.shareto.widgets.ShareToSelectPhotoLayout>