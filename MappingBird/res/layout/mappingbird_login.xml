<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/login_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="#F6892A" >

        <com.mappingbird.widget.MappingbirdButton
            android:id="@+id/back_icon"
            style="@style/TitleButtonStyle"
            android:text="@string/icon_back_arrow" />

        <com.mappingbird.widget.MappingbirdTextView
            android:id="@+id/login_title_name"
            style="@style/TextStyle_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/back_icon"
            android:text="@string/login_content_title"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/login_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/login_title" >

        <RelativeLayout
            android:id="@+id/login_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp" >

            <com.mappingbird.widget.MappingbirdTextView
                android:id="@+id/login_content_text"
                style="@style/TextStyle_Body_Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:textColor="#707070" />

            <RelativeLayout
                android:id="@+id/input_email_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/login_content_text"
                android:layout_marginTop="21dp" >

                <com.mappingbird.widget.MappingbirdEditText
                    android:id="@+id/input_email"
                    style="@style/TextStyle_Body_Small"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="#00000000"
                    android:gravity="center_vertical"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:textColor="#707070"
                    android:textColorHint="#DDDDDD" />
            </RelativeLayout>

            <View
                android:id="@+id/field_divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/input_email_layout"
                android:background="#DDDDDD" />

            <RelativeLayout
                android:id="@+id/input_password_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/field_divider" >

                <com.mappingbird.widget.MappingbirdButton
                    android:id="@+id/question_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:text="@string/icon_question"
                    android:textSize="24sp" />

                <com.mappingbird.widget.MappingbirdEditText
                    android:id="@+id/input_password"
                    style="@style/TextStyle_Body_Small"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="4dp"
                    android:layout_toLeftOf="@id/question_icon"
                    android:background="#00000000"
                    android:gravity="center_vertical"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:textColor="#707070"
                    android:textColorHint="#DDDDDD" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/input_password_layout"
                android:layout_marginTop="12dp"
                android:background="@drawable/login_selector" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" >

                    <ImageView
                        android:id="@+id/login_loading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="8dp"
                        android:src="@drawable/icon_loading"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/login_loading_text"
                        style="@style/TextStyle_Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/login_loading"
                        android:text="@string/login"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" >
                    </TextView>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>