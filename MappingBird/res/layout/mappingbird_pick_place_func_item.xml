<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cards_background" >

    <com.mappingbird.widget.MappingbirdFontIcon
        android:id="@+id/item_icon_font"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:textSize="24dp"
        android:gravity="center"
        android:textColor="@color/font_dark"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:text="@string/iconfont_camera" />

    <LinearLayout
        android:layout_toRightOf="@id/item_icon_font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:paddingLeft="8dp" >

            <com.mappingbird.widget.MappingbirdTextView
                android:id="@+id/item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="4dp"
                android:singleLine="true"
                android:textColor="@color/font_dark"
                android:textSize="16dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:paddingLeft="8dp" >

            <com.mappingbird.widget.MappingbirdTextView
                android:id="@+id/item_address"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="4dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/font_dark"
                android:textSize="13dp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>