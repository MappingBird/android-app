<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settings_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/settings_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/title_bar_background" >

        <com.mappingbird.widget.MappingbirdFontIcon
            android:id="@+id/back_icon"
            style="@style/TitleButtonStyle"
            android:layout_alignParentLeft="true"
            android:text="@string/iconfont_arrow_left" />

        <com.mappingbird.widget.MappingbirdTextView
            android:id="@+id/trip_detail_title_name"
            style="@style/TextStyle_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/str_settings"
            android:layout_toRightOf="@id/back_icon"
            android:singleLine="true"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/settings_sync_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/collection_item_bg" >

        <com.mappingbird.widget.MappingbirdFontIcon
            android:id="@+id/collection_settings_icon"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/iconfont_help_circle"
            android:textColor="@color/font_normal"
            android:textSize="26dp" />

        <com.mappingbird.widget.MappingbirdTextView
            android:id="@+id/collection_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/collection_settings_icon"
            android:paddingRight="16dp"
            android:text="@string/str_settings"
            android:textColor="@color/font_normal"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e5e5e5" />

    <LinearLayout
        android:id="@+id/settings_about_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/collection_item_bg"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="54dp" >

        <com.mappingbird.widget.MappingbirdTextView
            android:id="@+id/settings_about_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_about_title"
            android:textColor="@color/font_normal"
            android:textSize="16sp" />

        <com.mappingbird.widget.MappingbirdTextView
            android:id="@+id/settings_about_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_settings"
            android:textColor="@color/font_normal"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>