<?xml version="1.0" encoding="utf-8"?>
<com.mappingbird.widget.MappingbirdPlaceLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.mappingbird.widget.MappingbirdScrollView
        android:id="@+id/trip_place_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dp"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/trip_place_photo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/place_gallery_layout_height"
                android:background="#FFFFFF" >

                <com.mappingbird.widget.MappingbirdGallery
                    android:id="@+id/trip_photo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/place_gallery_height"
                    android:background="#000" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="24dp"
                    android:src="@drawable/detailview_bg_top" />

                <com.mappingbird.widget.MappingbirdFontIcon
                    android:id="@+id/pin_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:textColor="@color/title_bar_background"
                    android:textSize="45dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/trip_detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="#fff"
                android:paddingLeft="16dp"
                android:paddingRight="16dp" >

                <TextView
                    android:id="@+id/palce_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#6f6f6f"
                    android:textSize="20sp" />

                <LinearLayout
                    android:id="@+id/trip_place_address_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/palce_name"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal" >

                    <com.mappingbird.widget.MappingbirdFontIcon
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/icon_place_place"
                        android:textColor="#707070"
                        android:textSize="22sp" />

                    <com.mappingbird.widget.MappingbirdTextView
                        android:id="@+id/trip_place_address"
                        style="@style/TextStyle_Body_Small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="6dp"
                        android:textColor="#707070" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/trip_place_tag_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/trip_place_address_layout"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <com.mappingbird.widget.MappingbirdFontIcon
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/icon_place_tag"
                        android:textColor="#707070"
                        android:textSize="22sp" />

                    <com.mappingbird.widget.MappingbirdTextView
                        android:id="@+id/trip_place_tag"
                        style="@style/TextStyle_Body_Small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="6dp"
                        android:textColor="#707070" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/trip_place_date_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/trip_place_tag_layout"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <com.mappingbird.widget.MappingbirdFontIcon
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/icon_place_time"
                        android:textColor="#707070"
                        android:textSize="22sp" />

                    <com.mappingbird.widget.MappingbirdTextView
                        android:id="@+id/trip_place_date"
                        style="@style/TextStyle_Body_Small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="6dp"
                        android:textColor="#707070" />
                </LinearLayout>

                <com.mappingbird.widget.MappingbirdTextView
                    android:id="@+id/trip_place_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/trip_place_date_layout"
                    android:layout_marginTop="18dp"
                    android:lineSpacingExtra="6dp"
                    android:autoLink="all"
                    android:textColor="@color/font_normal"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:id="@+id/get_direction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/trip_place_description"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/direction_bg_selector"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/get_direction_text"
                        style="@style/TextStyle_Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawableLeft="@drawable/direction_selector"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:text="@string/get_direction"
                        android:textColor="@color/direction_text_color" >
                    </TextView>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" >

                <ImageView
                    android:id="@+id/trip_map_view"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/trip_map_address"
                    style="@style/TextStyle_Body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#B2FFFFFF"
                    android:padding="16dp"
                    android:visibility="gone"
                    android:textColor="#707070" />
            </RelativeLayout>
        </LinearLayout>
    </com.mappingbird.widget.MappingbirdScrollView>

    <RelativeLayout
        android:id="@+id/trip_detail_title_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/title_bar_background" >

        <com.mappingbird.widget.MappingbirdFontIcon
            android:id="@+id/back_icon_back"
            style="@style/TitleButtonStyle"
            android:layout_alignParentLeft="true"
            android:text="@string/icon_back_arrow" />

        <com.mappingbird.widget.MappingbirdFontIcon
            android:id="@+id/share_icon_back"
            style="@style/TitleButtonStyle"
            android:layout_alignParentRight="true"
            android:text="@string/icon_back_share" />

        <com.mappingbird.widget.MappingbirdTextView
            android:id="@+id/trip_detail_title_name"
            style="@style/TextStyle_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/share_icon_back"
            android:layout_toRightOf="@id/back_icon_back"
            android:singleLine="true"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/trip_detail_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/transparent" >

        <com.mappingbird.widget.MappingbirdFontIcon
            android:id="@+id/back_icon"
            style="@style/TitleButtonStyle"
            android:layout_alignParentLeft="true"
            android:text="@string/icon_back_arrow" />

        <com.mappingbird.widget.MappingbirdFontIcon
            android:id="@+id/share_icon"
            style="@style/TitleButtonStyle"
            android:layout_alignParentRight="true"
            android:text="@string/icon_back_share" />
    </RelativeLayout>

</com.mappingbird.widget.MappingbirdPlaceLayout>