<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.mappingbird.widget.MappingbirdScrollView
        android:id="@+id/trip_place_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dp"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbarAlwaysDrawVerticalTrack="false" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/trip_place_photo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/place_gallery_height"
                android:background="#FFFFFF" >

                <!--
                <ImageView
                    android:id="@+id/trip_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />
                -->

                <com.mappingbird.widget.MappingbirdGallery
                    android:id="@+id/trip_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#000" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/trip_detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <ImageView
                    android:id="@+id/pin_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:id="@+id/palce_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pin_icon"
                    android:layout_margin="5dp"
                    android:textColor="#4E4E4E"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/trip_place_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/palce_name"
                    android:drawableLeft="@drawable/icon_address"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:textColor="#707070"
                    android:textSize="14sp" >
                </TextView>

                <TextView
                    android:id="@+id/trip_place_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/trip_place_address"
                    android:drawableLeft="@drawable/icon_tag"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:textColor="#707070"
                    android:textSize="14sp" >
                </TextView>

                <TextView
                    android:id="@+id/trip_place_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/trip_place_tag"
                    android:drawableLeft="@drawable/icon_date"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:textColor="#707070"
                    android:textSize="14sp" >
                </TextView>

                <View
                    android:id="@+id/gray_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/trip_place_date"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:background="#EEEEEE" />

                <TextView
                    android:id="@+id/trip_place_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/gray_line"
                    android:layout_centerHorizontal="true"
                    android:textColor="#707070"
                    android:textSize="14sp" >
                </TextView>

                <RelativeLayout
                    android:id="@+id/get_direction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/trip_place_description"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/direction_bg_selector" >

                    <TextView
                        android:id="@+id/get_direction_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawableLeft="@drawable/direction_selector"
                        android:gravity="center_vertical"
                        android:text="@string/get_direction"
                        android:textColor="@color/direction_text_color"
                        android:textSize="18sp" >
                    </TextView>
                </RelativeLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/trip_map_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:minHeight="250dp"
                android:scaleType="fitXY" />
        </LinearLayout>
    </com.mappingbird.widget.MappingbirdScrollView>

    <RelativeLayout
        android:id="@+id/trip_detail_title_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/title_bar_background" >

        <ImageView
            android:id="@+id/back_icon_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="center"
            android:src="@drawable/icon_back" />

        <ImageView
            android:id="@+id/share_icon_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:scaleType="center"
            android:src="@drawable/share_selector" />

        <TextView
            android:id="@+id/trip_detail_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/share_icon_back"
            android:layout_toRightOf="@id/back_icon_back"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" >
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/trip_detail_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/transparent" >

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="center"
            android:src="@drawable/icon_back" />

        <ImageView
            android:id="@+id/share_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:scaleType="center"
            android:src="@drawable/share_selector" />
    </RelativeLayout>

</RelativeLayout>