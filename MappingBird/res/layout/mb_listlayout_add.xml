<?xml version="1.0" encoding="utf-8"?>
<com.mpbd.collection.widget.MBListLayoutAddLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- Hint -->

    <LinearLayout
        android:id="@+id/select_hint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="310dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        android:visibility="gone" >

        <com.mpbd.widget.MappingbirdTextView
            android:id="@+id/select_hint_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/add_place_pick_category"
            android:textColor="@color/font_white"
            android:textSize="20dp" />
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:rotation="180"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/arrow_sign_in"/>
    </LinearLayout>

    <com.mpbd.widget.MappingbirdTextView
        android:id="@+id/select_scene_text"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="239dp"
        android:singleLine="true"
        android:gravity="center"
        android:text="@string/aph_kind_landscape"
        android:textColor="#fff"
        android:textSize="12dp"
        android:visibility="gone" />

    <com.mpbd.widget.MappingbirdTextView
        android:id="@+id/select_restaurant_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="214dp"
        android:layout_marginRight="104dp"
        android:gravity="center"
        android:text="@string/aph_kind_restaurant"
        android:textColor="#fff"
        android:textSize="12dp"
        android:visibility="gone" />

    <com.mpbd.widget.MappingbirdTextView
        android:id="@+id/select_mall_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="150dp"
        android:layout_marginRight="144dp"
        android:gravity="center"
        android:text="@string/aph_kind_shopping"
        android:textColor="#fff"
        android:textSize="12dp"
        android:visibility="gone" />

    <com.mpbd.widget.MappingbirdTextView
        android:id="@+id/select_hotel_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="94dp"
        android:layout_marginRight="144dp"
        android:gravity="center"
        android:text="@string/aph_kind_hotel"
        android:textColor="#fff"
        android:textSize="12dp"
        android:visibility="gone" />

    <com.mpbd.widget.MappingbirdTextView
        android:id="@+id/select_default_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="104dp"
        android:gravity="center"
        android:text="@string/aph_kind_pin"
        android:textColor="#fff"
        android:textSize="12dp"
        android:visibility="gone" />

    <com.mpbd.widget.MappingbirdTextView
        android:id="@+id/select_bar_text"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="3dp"
        android:singleLine="true"
        android:gravity="center"
        android:text="@string/aph_kind_bar"
        android:textColor="#fff"
        android:textSize="12dp"
        android:visibility="gone" />

    <!-- Top -->

    <com.mpbd.widget.MappingbirdFontIcon
        android:id="@+id/select_scene"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_create_circle"
        android:gravity="center"
        android:text="@string/iconfont_camera"
        android:textColor="#fff"
        android:textSize="18dp" />

    <com.mpbd.widget.MappingbirdFontIcon
        android:id="@+id/select_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_create_circle"
        android:gravity="center"
        android:text="@string/iconfont_restaurant"
        android:textColor="#fff"
        android:textSize="18dp" />

    <com.mpbd.widget.MappingbirdFontIcon
        android:id="@+id/select_mall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/select_category_margin_left"
        android:background="@drawable/btn_create_circle"
        android:gravity="center"
        android:text="@string/iconfont_shopping"
        android:textColor="#fff"
        android:textSize="18dp" />

    <!-- bottom -->

    <com.mpbd.widget.MappingbirdFontIcon
        android:id="@+id/select_hotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_create_circle"
        android:gravity="center"
        android:text="@string/iconfont_hotel"
        android:textColor="#fff"
        android:textSize="18dp" />

    <com.mpbd.widget.MappingbirdFontIcon
        android:id="@+id/select_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_create_circle"
        android:gravity="center"
        android:text="@string/iconfont_general"
        android:textColor="#fff"
        android:textSize="18dp" />

    <com.mpbd.widget.MappingbirdFontIcon
        android:id="@+id/select_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/select_category_margin_left"
        android:background="@drawable/btn_create_circle"
        android:gravity="center"
        android:text="@string/iconfont_bar"
        android:textColor="#fff"
        android:textSize="18dp" />

    <!-- Center -->

    <com.mpbd.collection.widget.MBProgressCircleLayout
        android:id="@+id/item_current_position_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_white_circle" >

        <com.mpbd.widget.MappingbirdFontIcon
            android:id="@+id/item_current_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/iconfont_locate"
            android:textColor="@color/font_blue"
            android:textSize="26dp" />
        
        <ImageView 
            android:id="@+id/item_current_position_scan_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:src="@drawable/btn_submit_scan"/>

    </com.mpbd.collection.widget.MBProgressCircleLayout>

    <com.mpbd.collection.widget.MBProgressCircleLayout
        android:id="@+id/item_add_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_bule_circle" >

        <com.mpbd.widget.MappingbirdFontIcon
            android:id="@+id/item_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/iconfont_addplace"
            android:textColor="@color/white"
            android:textSize="26dp" />
    </com.mpbd.collection.widget.MBProgressCircleLayout>
</com.mpbd.collection.widget.MBListLayoutAddLayout>