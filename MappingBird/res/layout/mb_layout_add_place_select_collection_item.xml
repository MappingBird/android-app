<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_transparent_background" >

    <com.mappingbird.widget.MappingbirdFontIcon
        android:id="@+id/item_checked"
        style="@style/TitleButtonStyle"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="#00000000"
        android:gravity="center"
        android:text="@string/iconfont_check"
        android:textColor="@color/graphic_blue"
        android:textSize="20dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_toLeftOf="@id/item_checked"
        android:orientation="horizontal" >

        <com.mappingbird.widget.MappingbirdTextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:textColor="@color/font_normal"
            android:textSize="16dp" />

        <com.mappingbird.widget.MappingbirdTextView
            android:id="@+id/item_number"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical|left"
            android:paddingLeft="8dp"
            android:paddingRight="16dp"
            android:textColor="@color/font_normal"
            android:textSize="14dp" />
    </LinearLayout>

</RelativeLayout>